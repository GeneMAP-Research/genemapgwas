executor {
    name = 'pbspro'
    queue = 'normal'
    queueSize = 10
}

singularity {
    enabled = true
    automounts = true
    cacheDir = '${HOME}/singularity'
}

params {
    containersDir = '/mnt/lustre/groups/CBBI1243/KEVIN/containers/'
    input_dir = '/mnt/lustre/groups/CBBI1243/KEVIN/gwasdata/batchassoc/emmax/'
    output_dir = '/mnt/lustre/groups/CBBI1243/KEVIN/gwasdata/batchassoc/emmax/output/'
    covar = ''
    maf = 0.01
    geno = 0.05
    hwe = 1e-50

}

process {

    //beforeScript = 'module load chpc/python/3.7.0'
    beforeScript = 'module load chpc/singularity/3.5.3'
 
    errorStrategy = { task.exitStatus in [38,135,255] ? 'retry' : 'finish' }
    maxErrors = '-1'
    maxRetries = 3
 
    cpus = 24
    time = 3.h
    memory = 50.GB

    clusterOptions = '-P CBBI1243 -l select=1 -m b'

    withLabel:smallMemory {
        cpus = 24
        time = 15.m
        memory = 5.GB
    }
    withLabel:bigMemory {
        time = 50.m
        cpus = 24
        memory = 50.GB
    }
    withLabel:longRun {
        time = 2.h
        cpus = 24
        memory = 100.GB
    }
    withLabel:mediumMemory {
        cpus = 24
        time = 30.m
        memory = 5.GB
    }
    withLabel:emmax_kin {
        cpus = 24
        time = 20.m
        memory = 30.GB
    }
    withLabel:emmax_mem {
        cpus = 24
        time = 90.m
        memory = 50.GB
    }
    withLabel:plink_mem {
        cpus = 24
        time = 20.m
        memory = 30.GB
    }
    withLabel:plink2 {
        container = "${params.containersDir}plink2_latest.sif"
    }
    withLabel:plink {
        container = "${params.containersDir}plink.sif"
    }
    withLabel:emmax {
        container = "${params.containersDir}emmax_latest.sif"
    }
    withLabel:r_base {
	container = "${params.containersDir}R.sif"
    }
    withLabel:gcta {
        container = "${params.containersDir}gcta_latest.sif"
    }   
    withLabel:bolt {
        container = "${params.containersDir}bolt_lmm.sif"
    }   
    withLabel:gemma {
        container = "${params.containersDir}gemma_latest.sif"
    }   
    withLabel:snptest {
        container = "${params.containersDir}snptest_latest.sif"
    }
    withLabel:saige {
        container = "${params.containersDir}saige.sif"
    }

}

