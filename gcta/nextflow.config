executor {
    name = 'pbspro'
    queue = 'normal'
    queueSize = 10
}

singularity {
    enabled = true
    automounts = true
    cacheDir = '${HOME}/singularity'
}

params {
    containersDir = '/mnt/lustre/groups/CBBI1243/KEVIN/containers/'
    base_dir = '/mnt/lustre/groups/CBBI1243/KEVIN/gwasdata/mergedBatches/unimputed/gcta/'  // /mnt/lustre/groups/CBBI1243/KEVIN/gwasdata/mergedBatches/imputed/kgp/gcta/
    bfile = 'cm_unimputed_normalized'
    qcovar = '${base_dir}gcta/pca.qcov'  // covariates file with quantitative values such as PCs, AGE, etc. No heaher
    catcovar = '${base_dir}pca.catcov' // covariates file with categorical values such as SEX, ETHNICITY, etc
    output_dir = '${base_dir}output/'
    per_chr = 'true'
    ld_rsq_cutoff = 0.05
    ld_score_region = 100
}

process {

    //beforeScript = 'module load chpc/python/3.7.0'
    beforeScript = 'module load chpc/singularity/3.5.3'
 
    errorStrategy = { task.exitStatus in [38,135,255] ? 'retry' : 'finish' }
    maxErrors = '-1'
    maxRetries = 3
 
    cpus = 24
    time = 3.h
    memory = 50.GB

    clusterOptions = '-P CBBI1243'

    withLabel:smallMemory {
        cpus = 24
        time = 5.m
        memory = 2.GB
    }
    withLabel:bigMemory {
        time = 10.m
        cpus = 24
        memory = 5.GB
    }
    withLabel:longRun {
        time = 2.h
        cpus = 24
        memory = 100.GB
    }
    withLabel:mediumMemory {
        cpus = 24
        time = 10.m
        memory = 2.GB
    }
    withLabel:gcta_ld {
        cpus = 24
        time = 50.m
        memory = 20.GB
    }
    withLabel:gcta_grm {
        cpus = 24
        time = 10.m
        memory = 5.GB
    }
    withLabel:emmax_assoc {
        cpus = 24
        time = 24.h
        memory = 50.GB
    }
    withLabel:process_plink_assoc {
        cpus = 24
        time = 10.m
        memory = 10.GB
    }
    withLabel:plink2 {
        container = "${params.containersDir}plink2_latest.sif"
    }
    withLabel:plink {
        container = "${params.containersDir}plink.sif"
    }
    withLabel:emmax {
        container = "${params.containersDir}emmax_latest.sif"
    }
    withLabel:r_base {
	container = "${params.containersDir}R.sif"
    }
    withLabel:gcta {
        container = "${params.containersDir}gcta_latest.sif"
    }   
    withLabel:bolt {
        container = "${params.containersDir}bolt_lmm.sif"
    }   
    withLabel:gemma {
        container = "${params.containersDir}gemma_latest.sif"
    }   
    withLabel:snptest {
        container = "${params.containersDir}snptest_latest.sif"
    }
    withLabel:saige {
        container = "${params.containersDir}saige.sif"
    }

}

